@model HspMgmt_asgmt.Models.Doctor
@{
    ViewData["Title"] = "Create Doctor";
}

<h1>Create Doctor</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialty" class="control-label"></label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HospitalId" class="control-label"></label>
        <select asp-for="HospitalId" class="form-control" asp-items="@(new SelectList(ViewBag.Hospitals, "HospitalId", "HospitalName"))"></select>
        <span asp-validation-for="HospitalId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>